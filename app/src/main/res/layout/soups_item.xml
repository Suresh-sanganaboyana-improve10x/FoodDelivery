<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/serving"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/type_of_soup_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TypOfSoup"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:layout_editor_absoluteX="134dp" />

    <TextView
        android:id="@+id/details_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/type_of_soup_txt"
        app:layout_constraintTop_toBottomOf="@+id/type_of_soup_txt" />

    <TextView
        android:id="@+id/serving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serving:"
        android:textColor="#090909"
        app:layout_constraintBottom_toBottomOf="@+id/serving_number_txt"
        app:layout_constraintStart_toStartOf="@+id/details_txt"
        app:layout_constraintTop_toTopOf="@+id/serving_number_txt" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Est.Weight:"
        android:textColor="#0B0A0A"
        app:layout_constraintBottom_toBottomOf="@+id/weight_gr_txt"
        app:layout_constraintTop_toTopOf="@+id/weight_gr_txt"
        tools:layout_editor_absoluteX="267dp" />

    <TextView
        android:id="@+id/doller_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/serving"
        app:layout_constraintTop_toBottomOf="@+id/serving" />

    <TextView
        android:id="@+id/serving_number_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/weight"
        app:layout_constraintStart_toEndOf="@+id/serving"
        app:layout_constraintTop_toTopOf="@+id/weight" />

    <TextView
        android:id="@+id/weight_gr_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weight"
        tools:layout_editor_absoluteY="47dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F8F6F6"
        android:checkable="false"
        android:text="Add to Cart"
        android:textColor="#FD0808"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/doller_txt"
        app:layout_constraintTop_toBottomOf="@+id/weight_gr_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>